{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "The schema to verify this document against"
    },
    "name": {
      "type": "string",
      "description": "The name of the project"
    },
    "description": {
      "type": "string",
      "description": "A short description of the project"
    },
    "homepage": {
      "type": "string",
      "description": "A link to the project's homepage"
    },
    "version": {
      "type": "string",
      "description": "The version of the package being installed"
    },
    "sha256": {
      "type": "object",
      "properties": {
        "macos-arm64": { "type": "string" },
        "macos-x64": { "type": "string" },
        "linux-arm64": { "type": "string" },
        "linux-x64": { "type": "string" },
        "windows-arm64": { "type": "string" },
        "windows-x64": { "type": "string" }
      },
      "default": {
        "macos-arm64": "",
        "macos-x64": "",
        "linux-arm64": "",
        "linux-x64": "",
        "windows-arm64": "",
        "windows-x64": ""
      },
      "description": "The SHA256 checksum of the file being downloaded"
    },
    "url": {
      "type": "object",
      "properties": {
        "macos-arm64": { "type": "string" },
        "macos-x64": { "type": "string" },
        "linux-arm64": { "type": "string" },
        "linux-x64": { "type": "string" },
        "windows-arm64": { "type": "string" },
        "windows-x64": { "type": "string" }
      },
      "default": {
        "macos-arm64": "",
        "macos-x64": "",
        "linux-arm64": "",
        "linux-x64": "",
        "windows-arm64": "",
        "windows-x64": ""
      },
      "description": "The URL to the file being downloaded"
    },
    "dependencies": {
      "type": "array",
      "description": "Other packages that this package depends on",
      "items": { "type": "string" }
    },
    "caveats": {
      "type": "string",
      "description": "Extra information the user should know after installation completes, such as setup information"
    },
    "scripts": {
      "type": "object",
      "properties": {
        "install": {
          "type": "object",
          "properties": {
            "macos-arm64": { "type": "array", "items": { "type": "string" } },
            "macos-x64": { "type": "array", "items": { "type": "string" } },
            "linux-arm64": { "type": "array", "items": { "type": "string" } },
            "linux-x64": { "type": "array", "items": { "type": "string" } },
            "windows-arm64": { "type": "array", "items": { "type": "string" } },
            "windows-x64": { "type": "array", "items": { "type": "string" } }
          },
          "default": {
            "macos-arm64": [],
            "macos-x64": [],
            "linux-arm64": [],
            "linux-x64": [],
            "windows-arm64": [],
            "windows-x64": []
          },
          "description": "The script to run to install the package after downloading",
          "additionalProperties": false
        },
        "latest": {
          "type": "array",
          "description": "The script to run to check the latest version of the package",
          "items": { "type": "string" },
          "default": [
            "gh release list -R OWNER/REPO --json tagName --jq '.[0].tagName' | cut -c 2-"
          ]
        },
        "completions": {
          "type": "object",
          "properties": {
            "macos-arm64": { "type": "array", "items": { "type": "string" } },
            "macos-x64": { "type": "array", "items": { "type": "string" } },
            "linux-arm64": { "type": "array", "items": { "type": "string" } },
            "linux-x64": { "type": "array", "items": { "type": "string" } },
            "windows-arm64": { "type": "array", "items": { "type": "string" } },
            "windows-x64": { "type": "array", "items": { "type": "string" } }
          },
          "default": {
            "macos-arm64": [],
            "macos-x64": [],
            "linux-arm64": [],
            "linux-x64": [],
            "windows-arm64": [],
            "windows-x64": []
          },
          "description": "The script to run to install ZSH shell completions for the package",
          "additionalProperties": false
        }
      },
      "required": ["install", "latest"]
    }
  },
  "required": [
    "name",
    "description",
    "homepage",
    "version",
    "sha256",
    "url",
    "scripts"
  ],
  "additionalProperties": false
}
