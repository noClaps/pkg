{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the project"
    },
    "description": {
      "type": "string",
      "description": "A short description of the project"
    },
    "homepage": {
      "type": "string",
      "description": "A link to the project's homepage"
    },
    "version": {
      "type": "string",
      "description": "The version of the package being installed"
    },
    "sha256": {
      "type": "object",
      "description": "Platform-specific SHA256 checksums",
      "patternProperties": {
        "^[a-z]+-[a-z0-9_]+$": {
          "type": "string",
          "description": "SHA256 checksum for a specific platform (e.g., linux-x64, macos-arm64)"
        }
      },
      "additionalProperties": false
    },
    "url": {
      "type": "object",
      "description": "Platform-specific URLs",
      "patternProperties": {
        "^[a-z]+-[a-z0-9_]+$": {
          "type": "string",
          "description": "URL for a specific platform (e.g., linux-x64, macos-arm64)"
        }
      },
      "additionalProperties": false
    },
    "dependencies": {
      "type": "array",
      "description": "Other packages that this package depends on",
      "items": { "type": "string" }
    },
    "caveats": {
      "type": "string",
      "description": "Extra information the user should know after installation completes, such as setup information"
    },
    "platforms": {
      "type": "object",
      "description": "Platform-specific configurations for different OS/architecture combinations",
      "patternProperties": {
        "^[a-z]+-[a-z0-9_]+$": {
          "type": "object",
          "description": "Configuration for a specific platform (e.g., linux-x64, macos-arm64)",
          "properties": {
            "url": {
              "type": "string",
              "description": "Platform-specific URL to the file being downloaded"
            },
            "sha256": {
              "type": "string",
              "description": "Platform-specific SHA256 checksum of the file being downloaded"
            },
            "scripts": {
              "type": "object",
              "description": "Platform-specific scripts",
              "properties": {
                "install": {
                  "type": "array",
                  "description": "Platform-specific install script",
                  "items": { "type": "string" }
                },
                "latest": {
                  "type": "array",
                  "description": "Platform-specific latest version check script",
                  "items": { "type": "string" }
                },
                "completions": {
                  "type": "array",
                  "description": "Platform-specific completions installation script",
                  "items": { "type": "string" }
                }
              }
            }
          },
          "required": ["url", "sha256"]
        }
      },
      "additionalProperties": false
    },
    "scripts": {
      "type": "object",
      "description": "Scripts configuration - can be global or platform-specific",
      "properties": {
        "install": {
          "oneOf": [
            {
              "type": "array",
              "description": "Global install script for all platforms",
              "items": { "type": "string" }
            },
            {
              "type": "object",
              "description": "Platform-specific install scripts",
              "patternProperties": {
                "^[a-z]+-[a-z0-9_]+$": {
                  "type": "array",
                  "description": "Install script for a specific platform",
                  "items": { "type": "string" }
                }
              }
            }
          ]
        },
        "latest": {
          "oneOf": [
            {
              "type": "array",
              "description": "Global latest version check script for all platforms",
              "items": { "type": "string" },
              "default": [
                "gh release list -R OWNER/REPO --json tagName --jq '.[0].tagName' | cut -c 2-"
              ]
            },
            {
              "type": "object",
              "description": "Platform-specific latest version check scripts",
              "patternProperties": {
                "^[a-z]+-[a-z0-9_]+$": {
                  "type": "array",
                  "description": "Latest version check script for a specific platform",
                  "items": { "type": "string" }
                }
              }
            }
          ]
        },
        "completions": {
          "oneOf": [
            {
              "type": "array",
              "description": "Global completions installation script for all platforms",
              "items": { "type": "string" }
            },
            {
              "type": "object",
              "description": "Platform-specific completions installation scripts",
              "patternProperties": {
                "^[a-z]+-[a-z0-9_]+$": {
                  "type": "array",
                  "description": "Completions installation script for a specific platform",
                  "items": { "type": "string" }
                }
              }
            }
          ]
        }
      },
      "required": ["install", "latest"]
    }
  },
  "required": [
    "name",
    "description",
    "homepage",
    "version",
    "sha256",
    "url",
    "scripts"
  ],
  "description": "Package configuration schema. All packages must provide platform-specific sha256, url, and scripts configurations."
}
