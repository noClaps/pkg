{
  "$schema": "../package.schema.json",
  "name": "watchexec",
  "description": "Executes commands in response to file modifications",
  "homepage": "https://github.com/watchexec/watchexec",
  "version": "2.3.2",
  "sha256": {
    "linux-arm64": "ee76f5707e6cedf91f5d3d35ce9ff9391b1c1bbbccfa946c57a1a29828276490",
    "linux-x64": "21ac2d0825225e14f7d7c1de0b33d55f657c4bd64bdab6908d773396283c75ba",
    "macos-arm64": "f19c399c20bc7bfa5569b57c0244da3b926bc942e98c2a4c7f548cf1f0d65d76",
    "macos-x64": "2f2f3b084937256683adf86495f4e6ebb1b18cabd24892e171fcb1ec85f910c7"
  },
  "url": {
    "linux-arm64": "https://github.com/watchexec/watchexec/releases/download/v{{ version }}/watchexec-{{ version }}-aarch64-unknown-linux-gnu.tar.xz",
    "linux-x64": "https://github.com/watchexec/watchexec/releases/download/v{{ version }}/watchexec-{{ version }}-x86_64-unknown-linux-gnu.tar.xz",
    "macos-arm64": "https://github.com/watchexec/watchexec/releases/download/v{{ version }}/watchexec-{{ version }}-aarch64-apple-darwin.tar.xz",
    "macos-x64": "https://github.com/watchexec/watchexec/releases/download/v{{ version }}/watchexec-{{ version }}-x86_64-apple-darwin.tar.xz"
  },
  "scripts": {
    "completions": {
      "linux-arm64": [
        "cp watchexec-{{ version }}-aarch64-unknown-linux-gnu/completions/zsh {{ pkg.completions.zsh }}/_watchexec"
      ],
      "linux-x64": [
        "cp watchexec-{{ version }}-x86_64-unknown-linux-gnu/completions/zsh {{ pkg.completions.zsh }}/_watchexec"
      ],
      "macos-arm64": [
        "cp watchexec-{{ version }}-aarch64-apple-darwin/completions/zsh {{ pkg.completions.zsh }}/_watchexec"
      ],
      "macos-x64": [
        "cp watchexec-{{ version }}-x86_64-apple-darwin/completions/zsh {{ pkg.completions.zsh }}/_watchexec"
      ]
    },
    "install": {
      "linux-arm64": [
        "tar -xf watchexec-{{ version }}-aarch64-unknown-linux-gnu.tar.xz",
        "install watchexec-{{ version }}-aarch64-unknown-linux-gnu/watchexec {{ pkg.bin_dir }}/watchexec"
      ],
      "linux-x64": [
        "tar -xf watchexec-{{ version }}-x86_64-unknown-linux-gnu.tar.xz",
        "install watchexec-{{ version }}-x86_64-unknown-linux-gnu/watchexec {{ pkg.bin_dir }}/watchexec"
      ],
      "macos-arm64": [
        "tar -xf watchexec-{{ version }}-aarch64-apple-darwin.tar.xz",
        "install watchexec-{{ version }}-aarch64-apple-darwin/watchexec {{ pkg.bin_dir }}/watchexec"
      ],
      "macos-x64": [
        "tar -xf watchexec-{{ version }}-x86_64-apple-darwin.tar.xz",
        "install watchexec-{{ version }}-x86_64-apple-darwin/watchexec {{ pkg.bin_dir }}/watchexec"
      ]
    },
    "latest": [
      "gh release list -R watchexec/watchexec --json tagName --jq '.[0].tagName' | cut -c 2-"
    ]
  }
}
