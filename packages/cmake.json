{
  "$schema": "../package.schema.json",
  "name": "cmake",
  "description": "A Powerful Software Build System",
  "homepage": "https://cmake.org",
  "version": "4.1.1",
  "sha256": {
    "macos-arm64": "3cd1da5341618645bdc85a3b99e273f29c4d48db2f545925a658db992e61f6f9",
    "macos-x64": "3cd1da5341618645bdc85a3b99e273f29c4d48db2f545925a658db992e61f6f9",
    "linux-arm64": "a34bc76b1ebe76ca0bbd6067f68d4614b93221912770dc08f466aec1923e9bef",
    "linux-x64": "5a6c61cb62b38e153148a2c8d4af7b3d387f0c8c32b6dbceb5eb4af113efd65a"
  },
  "url": {
    "macos-arm64": "https://github.com/Kitware/CMake/releases/download/v{{ version }}/cmake-{{ version }}-macos-universal.tar.gz",
    "macos-x64": "https://github.com/Kitware/CMake/releases/download/v{{ version }}/cmake-{{ version }}-macos-universal.tar.gz",
    "linux-arm64": "https://github.com/Kitware/CMake/releases/download/v{{ version }}/cmake-{{ version }}-linux-aarch64.tar.gz",
    "linux-x64": "https://github.com/Kitware/CMake/releases/download/v{{ version }}/cmake-{{ version }}-linux-x86_64.tar.gz"
  },
  "scripts": {
    "install": {
      "macos-arm64": [
        "tar -xf cmake-{{ version }}-macos-universal.tar.gz",
        "mkdir -p {{ pkg.opt_dir }}/cmake",
        "mv cmake-{{ version }}-macos-universal/CMake.app/Contents/{bin,doc,man,share} {{ pkg.opt_dir }}/cmake/",
        "rm {{ pkg.opt_dir }}/cmake/bin/cmake-gui",
        "ln -sf {{ pkg.opt_dir }}/cmake/bin/* {{ pkg.bin_dir }}"
      ],
      "macos-x64": [
        "tar -xf cmake-{{ version }}-macos-universal.tar.gz",
        "mkdir -p {{ pkg.opt_dir }}/cmake",
        "mv cmake-{{ version }}-macos-universal/CMake.app/Contents/{bin,doc,man,share} {{ pkg.opt_dir }}/cmake/",
        "rm {{ pkg.opt_dir }}/cmake/bin/cmake-gui",
        "ln -sf {{ pkg.opt_dir }}/cmake/bin/* {{ pkg.bin_dir }}"
      ],
      "linux-arm64": [
        "tar -xf cmake-{{ version }}-linux-aarch64.tar.gz",
        "mv cmake-{{ version }}-linux-aarch64 {{ pkg.opt_dir }}/cmake",
        "ln -sf {{ pkg.opt_dir }}/cmake/bin/* {{ pkg.bin_dir }}"
      ],
      "linux-x64": [
        "tar -xf cmake-{{ version }}-linux-x86_64.tar.gz",
        "mv cmake-{{ version }}-linux-x86_64 {{ pkg.opt_dir }}/cmake",
        "ln -sf {{ pkg.opt_dir }}/cmake/bin/* {{ pkg.bin_dir }}"
      ]
    },
    "latest": [
      "gh repo view Kitware/CMake --json latestRelease --jq '.latestRelease.tagName' | cut -c 2-"
    ]
  }
}
