{
  "$schema": "../package.schema.json",
  "name": "pkg",
  "description": "A simple package manager for macOS",
  "homepage": "https://pkg.zerolimits.dev",
  "version": "0.1.6",
  "sha256": "e9e9f6cbfd0cd4e20be2d53c33224302850ab6e31ffdbd4eced417988722f2eb",
  "url": "https://github.com/noClaps/pkg/releases/download/v{{ version }}/pkg.tar.xz",
  "scripts": {
    "install": [
      "tar -xf pkg.tar.xz",
      "install pkg {{ pkg.bin_dir }}/pkg"
    ],
    "latest": [
      "gh release list -R noClaps/pkg --json tagName --jq '.[0].tagName' | cut -c 2-"
    ]
  }
}
